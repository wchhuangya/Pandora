<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.ch.wchhuangya.android.pandora.vm.calculator.CalculatorVM"/>
    </data>

    <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/common_toolbar"
            app:vm="@{vm}"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="2"
            android:gravity="bottom"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/cal_top_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:maxLines="1"
                android:paddingRight="10dp"
                android:text="@{vm.secondNum}"
                android:textColor="#555"
                android:textSize="35sp"
                tools:text="16"
                />

            <TextView
                android:id="@+id/cal_bottom_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:maxLines="1"
                android:paddingRight="10dp"
                android:text="@{vm.firstNum}"
                android:textColor="#222"
                android:textSize="45sp"
                tools:text="+ 3234234"
                />

            <TextView
                android:id="@+id/cal_res"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:maxLines="1"
                android:paddingRight="10dp"
                android:text="@{vm.resNum}"
                android:textColor="#888"
                android:textSize="30sp"
                tools:text="= 3234250"
                />

        </LinearLayout>

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            app:columnCount="4"
            app:orientation="horizontal"
            app:rowCount="5"
            >

            <Button
                android:id="@+id/cal_clear"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:layout_rowWeight="1"
                android:text="clear"
                android:onClick="@{() -> vm.clear()}"
                />

            <Button
                android:id="@+id/cal_del"
                android:layout_marginRight="5dp"
                app:layout_rowWeight="1"
                android:text="del"
                android:onClick="@{() -> vm.del()}"
                />

            <Button
                android:id="@+id/cal_divide"
                android:layout_marginRight="5dp"
                app:layout_rowWeight="1"
                android:text="÷"
                android:onClick="@{vm::operatorClick}"
                />

            <Button
                android:id="@+id/cal_multiply"
                app:layout_rowWeight="1"
                android:text="×"
                android:onClick="@{vm::operatorClick}"
                />

            <Button
                android:id="@+id/cal_7"
                android:layout_marginLeft="5dp"
                app:layout_rowWeight="1"
                android:text="7"
                android:onClick="@{vm::numClick}"
                />

            <Button
                android:id="@+id/cal_8"
                app:layout_rowWeight="1"
                android:text="8"
                android:onClick="@{vm::numClick}"
                />

            <Button
                android:id="@+id/cal_9"
                app:layout_rowWeight="1"
                android:text="9"
                android:onClick="@{vm::numClick}"
                />

            <Button
                android:id="@+id/cal_minus"
                app:layout_rowWeight="1"
                android:text="－"
                android:onClick="@{vm::operatorClick}"
                />

            <Button
                android:id="@+id/cal_4"
                android:layout_marginLeft="5dp"
                app:layout_rowWeight="1"
                android:text="4"
                android:onClick="@{vm::numClick}"
                />

            <Button
                android:id="@+id/cal_5"
                app:layout_rowWeight="1"
                android:text="5"
                android:onClick="@{vm::numClick}"
                />

            <Button
                android:id="@+id/cal_6"
                app:layout_rowWeight="1"
                android:text="6"
                android:onClick="@{vm::numClick}"
                />

            <Button
                android:id="@+id/cal_add"
                app:layout_rowWeight="1"
                android:text="+"
                android:onClick="@{vm::operatorClick}"
                />

            <Button
                android:id="@+id/cal_1"
                android:layout_marginLeft="5dp"
                app:layout_rowWeight="1"
                android:text="1"
                android:onClick="@{vm::numClick}"
                />

            <Button
                android:id="@+id/cal_2"
                app:layout_rowWeight="1"
                android:text="2"
                android:onClick="@{vm::numClick}"
                />

            <Button
                android:id="@+id/cal_3"
                app:layout_rowWeight="1"
                android:text="3"
                android:onClick="@{vm::numClick}"
                />

            <Button
                android:id="@+id/cal_equals"
                app:layout_rowSpan="2"
                app:layout_rowWeight="1"
                app:layout_gravity="fill_vertical"
                android:text="="
                android:onClick="@{() -> vm.equalsClick()}"
                />

            <Button
                android:id="@+id/cal_12"
                android:layout_marginLeft="5dp"
                app:layout_rowWeight="1"
                android:text="%"
                android:onClick="@{() -> vm.percentClick()}"
                />

            <Button
                android:id="@+id/cal_zero"
                app:layout_rowWeight="1"
                android:text="0"
                android:onClick="@{vm::numClick}"
                />

            <Button
                android:id="@+id/cal_dot"
                app:layout_rowWeight="1"
                android:text="."
                android:onClick="@{() -> vm.dotClick()}"
                />

        </android.support.v7.widget.GridLayout>

    </LinearLayout>
</layout>