<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/drawer_header_bg"
    >

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/header_img"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:src="@mipmap/user_default"
        android:scaleType="fitCenter"
        android:layout_marginLeft="25dp"
        android:layout_centerVertical="true"
        app:riv_corner_radius="30dip"
        app:riv_border_width="0dip"
        app:riv_border_color="#333333"
        app:riv_mutate_background="true"
        app:riv_tile_mode="clamp"
        app:riv_oval="true" />
    <TextView
        android:id="@+id/header_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/header_img"
        android:layout_alignTop="@+id/header_img"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        tools:text="游侠一枚"
        />
    <TextView
        android:id="@+id/header_loging_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_img"
        android:layout_alignLeft="@+id/header_img"
        android:layout_alignRight="@+id/header_img"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        tools:text="登录/注册"
        />

</RelativeLayout>